{
  "name": "Happy End",
  "description": "Extension to stop video at happy moment",
  "version": "1.0.1",
  "manifest_version": 3,
  "content_scripts": [{
    "css": ["content.css"],
    "js": ["content.js"],
    "matches": ["https://*/*"],
    "all_frames": true
  }],
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
